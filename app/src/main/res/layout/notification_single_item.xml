<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"

    android:id="@+id/rl_notificationitem_layout">
    <com.kookyapps.gpstankertracking.CustomViews.RobotoBoldTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notificationitem_heading"
        android:layout_marginTop="3dp"
        android:text="The Standard Lorem Ipsum passage, used since 1500s"
        android:textColor="@color/colorblack"
        android:maxLines="1"
        android:textSize="13dp"/>
    <com.kookyapps.gpstankertracking.CustomViews.RobotoRegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notificationitem_data"
        android:layout_below="@+id/tv_notificationitem_heading"
        android:layout_marginTop="3dp"
        android:text="loremdfhsjfsfskjvsvnjdnvsdjkfjsklfjs"
        android:textSize="11dp"
        android:textColor="@color/colorblack"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGreyLight"
        android:layout_below="@+id/tv_notificationitem_data"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

</RelativeLayout>