                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="5dp"
                                android:id="@+id/map_underline2"
                                android:layout_below="@id/tv_map_drop_text"
                                android:background="@color/colordark_grey"
                                android:layout_alignStart="@+id/tv_bookingdetail_bookingid"
                                />



                            <com.kookyapps.gpstankertracking.CustomViews.RobotoRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_map_contact_title"
