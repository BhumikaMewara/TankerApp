<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/water_tanker_toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_water_tanker_toolbar_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/toolbarmenu"
                android:src="@drawable/ham" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_water_tanker_toolbartitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorblack"
            android:layout_centerVertical="true"
            android:textSize="20dp"
            android:textStyle="bold" />
        <RelativeLayout
            android:id="@+id/rl_water_tanker_toolbar_menu_notification"
            android:layout_width="47dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:id="@+id/iv_booking_notification"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"

                android:src="@drawable/notification_drawable" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/rl_toolbar_notificationcount"
                android:background="@drawable/tanker_online_icon"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp">
                <com.kookyapps.gpstankertracking.CustomViews.RobotoRegularTextView
                    android:id="@+id/tv_toolbar_notificationcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/colorwhite"
                    android:textSize="8dp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>